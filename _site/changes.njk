---
layout: layouts/default.njk
title: Change Log
gh:
  base: https://github.com/craigerskine/
  repo: pxl.media
---

{%- from 'components/heading.njk' import heading -%}

{%- call heading(tag='h1',label=title) %}{%- endcall %}

<ol role="list" class="mx-auto px-4 w-full max-w-md">
  {%- for commit in collections.recentChanges %}
  <li class="flex gap-x-10 relative">
    <div class="flex-(& col shrink-0) items-center" aria-hidden="true">
      <b class="w-3 h-3 border-(1 dotted gray-500/50) bg-gray-500/25 text-xs flex-(& shrink-0) items-center justify-center rounded-full"></b>
      {%- if not loop.last %}
      <i class="w-px border-(l dotted gray-500/50) flex-1"></i>
      {%- endif %}
    </div>
    <article class="pb-10 min-w-0 grow">
      <p class="pt-px text-xs leading-none opacity-70">{{ commit.authorName }}</p>
      <h2 class="mt-1 text-base line-clamp-1"><a href="{{ gh.base }}{{ gh.repo }}/commit/{{ commit.hash }}" class="after:(content-[''] block absolute inset-0 z-10) motion-safe:(transition) hover:(text-white underline)">{{ commit.subject }}</a></h2>
    </article>
    <aside class="pb-10 text-end flex-shrink-0">
      <time class="mb-1 text-xs leading-6 inline-block">{{ commit.authorDate | dateOnly }}</time>
      <p class="text-xs opacity-70">#{{ commit.abbrevHash }}</p>
    </aside>
  </li>
  {%- endfor %}
</ol>
