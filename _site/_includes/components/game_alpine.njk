<li class="game mx-auto mb-8 px-4 w-full max-w-xs flex relative hover:(z-20) lg:(mx-0)">
  <template x-if="item.pending">
    <div class="absolute inset-x-4 inset-y-0 z-[-1] ring-(2 red-500/100) rounded-lg"></div>
  </template>
  <div class="box w-full flex-(& col) relative">
    <div class="box-cover w-full h-16 bg-black/80 flex-(& none) relative">
      <div class="box-cover-img flex w-full bg-center bg-cover rounded-t-lg" :style="'background-image: url(/_assets/img/games/'+ item.id +'.jpg)'"><div class="w-full backdrop-brightness-75 rounded-t-lg"></div></div>
      <div class="group p-1 w-2/3 flex items-end justify-end absolute inset-y-0 right-0">
        <a :href="'/platform/'+ slugify(item.platform.title) +'/'" class="py-1 px-2 bg-black/75 text-(gray-200/75 xs) leading-none font-semibold truncate block relative rounded-full motion-safe:(transition) hover:(text-white/100)" :title="item.platform.title" x-text="item.platform.title"></a>
      </div>
    </div>
    <div class="details w-full flex-(& auto)">
      <div class="meta p-3 pb-0 w-full min-w-0 flex-(& auto col) justify-between">
        <div class="mast mb-2">
          <b class="name text-(white base) font-black truncate block" :title="item.title" x-text="item.title"></b>
          <p class="note">
            <i class="w-full min-w-0 text-(gray-400 xs) truncate block flex-1" :title="item.note" x-html="item.note ? item.note : '&nbsp;'"></i>
          </p>
        </div>
        <ul class="py-2 border-(t dotted gray-500/30) w-full text-base flex items-center">
          <li class="flex-1">
            <ul class="tags flex items-center space-x-4">
              <template x-for="g in item.genre" hidden>
                <li>
                  <a :href="'/genre/'+ slugify(g.title) +'/'" class="group flex relative motion-safe:(transition) hover:(text-white)">
                    <iconify-icon :icon="g.ico" inline class="m-auto text-xl"></iconify-icon>
                    <b class="py-1 px-2 bg-black text-(gray-400 xs) whitespace-nowrap absolute bottom-full left-1/2 invisible opacity-[.0001] rounded transform translate-y-1 -translate-x-1/2 shadow-lg motion-safe:(transition-all) group-hover:(visible opacity-100 -translate-y-1) group-focus:(visible opacity-100 -translate-y-1)" x-text="g.title"></b>
                  </a>
                </li>
              </template>
            </ul>
          </li>
          <li class="ml-auto">
            <ul class="icons flex items-center space-x-2">
              <template x-for="i in 3">
                <template x-if="(i === 1 && item.physical) || (i === 2 && item.digital) || (i === 3 && item.guide)">
                  <li class="group flex relative [&_.iconify]:(m-auto text-xl opacity-50)" tabindex="0">
                    <template x-if="i === 1">
                      <iconify-icon icon="mdi:chip" inline class="iconify"></iconify-icon>
                    </template>
                    <template x-if="i === 2">
                      <iconify-icon icon="mdi:qrcode" inline class="iconify"></iconify-icon>
                    </template>
                    <template x-if="i === 3">
                      <iconify-icon icon="mdi:notebook" inline class="iconify"></iconify-icon>
                    </template>
                    <b class="py-1 px-2 bg-black text-(gray-400 xs) whitespace-nowrap absolute bottom-full left-1/2 invisible opacity-[.0001] rounded transform translate-y-1 -translate-x-1/2 shadow-lg motion-safe:(transition-all) group-hover:(visible opacity-100 -translate-y-1) group-focus:(visible opacity-100 -translate-y-1)" x-text="i === 1 ? 'Physical' : i === 2 ? 'Digital' : i === 3 ? 'Guide' : ''"></b>
                  </li>
                </template>
              </template>
            </ul>
          </li>
        </ul>
      </div>
    </div>
    <template x-if="item.pending">
      <a href="/games/pending/" class="w-2 h-2 text-red-500 bg-current cursor-pointer absolute top-2 right-2 rounded-full" title="Pending">
        <i class="ring-2 ring-current absolute inset-0 z-10 rounded-full animate-ping" aria-hidden="true"><span class="sr-only">Pending: Pre-Ordered</span></i>
      </a>
    </template>
  </div>
</li>